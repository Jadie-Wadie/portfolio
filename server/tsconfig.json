{
	"compilerOptions": {
		"target": "es6",
		"rootDir": "src",
		"outDir": "../build/server",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["esnext"],
		"baseUrl": "src",
		"paths": {
			"@index": ["index"],
			"@models/*": ["models/*"],
			"@routes/*": ["routes/*"],
			"@scripts/*": ["scripts/*"]
		},
		"strict": true
	},
	"include": ["src"],
	"exclude": ["data"]
}
